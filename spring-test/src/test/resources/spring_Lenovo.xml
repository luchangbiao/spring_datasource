<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--bean标签表示要创建的bean对象
        id:bean的唯一标识，为了跟其他的bean区分
        class:表示要创建的bean的完全限定名
    -->
    <bean id="person" class="org.springframework.nashibing.bean.Person">
        <!--给属性赋值使用property标签
        name:表示属性的名称
        value：表示具体的属性值
        -->
        <property name="id" value="1"></property>
        <property name="name" value="zhangsan"></property>
        <property name="age" value="20"></property>
        <property name="gender" value="男"></property>
     </bean>

	<bean id="teacher" class="org.springframework.nashibing.bean.Teacher">
		<!--给属性赋值使用property标签
		name:表示属性的名称
		value：表示具体的属性值
		-->
		<property name="id" value="1"></property>
		<property name="name" value="zhangsan"></property>
		<property name="age" value="20"></property>
		<property name="gender" value="男"></property>
	</bean>

	<!-- 定义数据库驱动 -->
	<bean id="dataSourceDriver" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="classpath:datasource.properties" />
	</bean>

	<!-- 定义数据源 -->
	<bean id="dataSource" class="org.springframework.demo.DataSource">
		<property name="driverClassName" value="${database.driver}" />
		<property name="url" value="${database.url}" />
		<property name="username" value="${database.user}" />
		<property name="password" value="${database.password}" />
	</bean>

	<bean class="org.springframework.nashibing.test.FirstBeanFactoryPostProcessor"></bean>
	<bean class="org.springframework.nashibing.test.SecondBeanFactoryPostProcessor"></bean>
</beans>